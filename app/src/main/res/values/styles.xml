<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/white</item>
    </style>

    <style name="inputPlaceholder">
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_input</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="radioButton">
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/selector_radiobutton</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="subTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TaskDateTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TaskDay">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#96ABC8</item>
    </style>
    <style name="TaskName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TaskParams" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <color name="black">#000</color>

    <style name="FinanceProgressDefaultStyle">
        <item name="color">@color/colorAccent</item>
        <item name="inactiveColor">@color/red</item>
        <item name="textSize">@dimen/defaultTextSize</item>
        <item name="strokeWidth">@dimen/defaultStrokeWidth</item>
    </style>

    <style name="BottomSheetStyleDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" >
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
