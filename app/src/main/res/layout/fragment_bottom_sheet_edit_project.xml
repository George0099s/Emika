<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.calendar.BottomSheetEditProjectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Edit Project"
            android:textColor="#424242"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/linearLayout17"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/save_proj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/ripple_create_task"
            android:paddingHorizontal="12dp"
            android:text="Save"
            android:textColor="@color/green"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout17"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shape_task_info"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29">

            <EditText
                android:id="@+id/edit_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/type_project_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/hint_text"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/edit_project_name"
                tools:text="@string/hello_blank_fragment" />

            <EditText
                android:id="@+id/edit_project_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:hint="@string/notes"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                tools:text="@string/hello_blank_fragment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_task_info"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_field_settings"
                android:textColor="@color/mainTextColor"

                android:textSize="16sp" />


            <Switch
                android:id="@+id/edit_project_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_deadline_edit_project"
                android:drawablePadding="10dp"
                android:text="@string/deadline_string"
                android:theme="@style/SwitchGreen" />

            <Switch
                android:id="@+id/edit_project_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_priority_edit_project"
                android:drawablePadding="10dp"
                android:text="@string/priority"
                android:theme="@style/SwitchGreen" />


            <Switch
                android:id="@+id/edit_project_estimated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_clock_edit_project"
                android:drawablePadding="10dp"
                android:text="@string/estimated_time"
                android:theme="@style/SwitchGreen" />


            <Switch
                android:id="@+id/edit_project_spent_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_actual_spent_time_edit_project"
                android:drawablePadding="10dp"
                android:text="@string/actual_spent_time"
                android:theme="@style/SwitchGreen" />

            <Switch
                android:id="@+id/edit_project_epic_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_epic_links_edit_project"
                android:drawablePadding="10dp"
                android:text="@string/epic_links"
                android:theme="@style/SwitchGreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            android:background="@drawable/shape_task_info"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableStart="@drawable/ic_members_grey"
                    android:drawablePadding="10dp"
                    android:text="@string/members"
                    android:textColor="@color/mainTextColor"
                    android:theme="@style/SwitchGreen" />

                <TextView
                    android:id="@+id/edit_project_members"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_right_green_arrow"
                    android:drawablePadding="10dp"
                    android:gravity="end"
                    android:text="@string/members"
                    android:textColor="@color/mainTextColor"
                    android:theme="@style/SwitchGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:drawableStart="@drawable/ic_sections_grey"
                    android:drawablePadding="10dp"
                    android:text="@string/sections"
                    android:textColor="@color/mainTextColor"
                    android:theme="@style/SwitchGreen" />

                <TextView
                    android:id="@+id/edit_project_sections_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_right_green_arrow"
                    android:drawablePadding="10dp"
                    android:gravity="end"
                    android:text="@string/edit_sections"
                    android:textColor="@color/green"
                    android:theme="@style/SwitchGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:drawableStart="@drawable/ic_epic_links_grey"
                    android:drawablePadding="10dp"
                    android:text="@string/epic_links"
                    android:textColor="@color/mainTextColor"
                    android:theme="@style/SwitchGreen" />

                <TextView
                    android:id="@+id/edit_project_epic_links_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="end"
                    android:drawableEnd="@drawable/ic_right_green_arrow"

                    android:text="@string/epic_links"
                    android:textColor="@color/green"
                    android:theme="@style/SwitchGreen" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>