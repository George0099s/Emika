<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view4"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/green"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/day_info_task_completed_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="@+id/card"
        card_view:layout_constraintStart_toStartOf="@+id/card"
        card_view:layout_constraintTop_toBottomOf="@+id/card"
        tools:text="George Avakyan" />
    <!--    <TextView-->
<!--        android:id="@+id/day_info_completed_type"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="@color/grey"-->
<!--        android:textSize="16sp"-->
<!--        card_view:layout_constraintEnd_toEndOf="parent"-->
<!--        card_view:layout_constraintHorizontal_bias="0.0"-->
<!--        card_view:layout_constraintStart_toStartOf="@+id/day_info_task_completed_by"-->
<!--        card_view:layout_constraintTop_toBottomOf="@+id/day_info_task_completed_by"-->
<!--        tools:text="George Avakyan" />-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_day_info"
        card_view:layout_constraintBottom_toBottomOf="@+id/day_info_task_time"
        card_view:layout_constraintEnd_toStartOf="@+id/day_info_task_time"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="@+id/day_info_task_time"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/day_info_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="14:55"
        android:textColor="@color/green"
        card_view:layout_constraintStart_toEndOf="@+id/view4"
        card_view:layout_constraintStart_toStartOf="@+id/card"
        card_view:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:duplicateParentState="true"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/view4"
        card_view:layout_constraintTop_toBottomOf="@+id/day_info_task_time">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_inbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_inbox_item"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                card_view:layout_constraintEnd_toEndOf="@+id/day_info_task_text"
                card_view:layout_constraintStart_toStartOf="@+id/day_info_task_text"
                card_view:layout_constraintTop_toBottomOf="@+id/day_info_task_text">

                <TextView
                    android:id="@+id/day_info_task_canceled"
                    style="@style/TaskParams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_task_canceled"
                    android:drawableLeft="@drawable/ic_canceled"
                    android:drawablePadding="5dp"
                    android:padding="4dp"
                    android:text="Canceled"
                    android:textColor="#506378"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/day_info_task_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:textSize="12sp"
                    card_view:layout_constraintStart_toStartOf="@+id/text"
                    card_view:layout_constraintTop_toBottomOf="@+id/text"
                    tools:text="urgent" />

                <TextView
                    android:id="@+id/day_info_task_deadline"
                    style="@style/TaskParams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    card_view:layout_constraintStart_toStartOf="@+id/text"
                    card_view:layout_constraintTop_toBottomOf="@+id/text"
                    tools:text="5 days left" />

                <TextView
                    android:id="@+id/day_info_task_project"
                    style="@style/TaskParams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    card_view:layout_constraintStart_toStartOf="@+id/text"
                    card_view:layout_constraintTop_toBottomOf="@+id/text"
                    tools:text="Emika" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkbox_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/day_info_task_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:button="@drawable/custom_checkboks"
                    android:paddingVertical="15dp"
                    android:textColorHighlight="@color/grey" />

            </LinearLayout>

            <TextView
                android:id="@+id/day_info_task_text"
                style="@style/TaskName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="normal"
                card_view:layout_constraintEnd_toStartOf="@+id/linearLayout6"
                card_view:layout_constraintStart_toEndOf="@+id/checkbox_layout"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:text="test test test" />

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:gravity="end"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/day_info_task_estimated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/consolab"
                    android:background="@drawable/shape_estimated_time"
                    android:gravity="center"
                    android:text="1h"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/day_info_task_spent_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_spent_time"
                    android:gravity="center"
                    android:fontFamily="@font/consolab"
                    android:text="1h"
                    android:textColor="@color/green"
                    android:textSize="10sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="@+id/item_task_estimated_time"
                    card_view:layout_constraintStart_toStartOf="@+id/item_task_estimated_time"
                    card_view:layout_constraintTop_toBottomOf="@+id/item_task_estimated_time" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>